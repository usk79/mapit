<h1>Map It!へようこそ </h1>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3">
    <div class="mapit-panel">
      <%= form_for(@user) do |f| %>
         <div class="form-group">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Your Name' %>
        </div>
  
        <div class="form-group">
          <%= f.email_field :email, class: 'form-control', placeholder: 'Email Address' %>
        </div>
  
        <div class="form-group">
          <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
        </div>
  
        <div class="form-group">
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Please Input Password Again' %>
        </div>
  
        <%= f.submit 'Start Map It !', class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>
  </div>
</div>
