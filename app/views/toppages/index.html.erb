<div id="st-container" class="st-container">
  <div class="st-pusher">
		
		<div class="st-content">
      <div class="st-content-inner">
        
        <div class="main">
          <div class="cover">
            <div class="cover-inner">
              <div class="cover-contents">
                <h1>好きな場所をコレクションしよう</h1>
                <%= link_to 'Map It ! に参加する', signup_path, class: 'btn btn-lg btn-primary' %>
              </div>
            </div>
          </div>
          
          <h1 class="collection_name">みんなのコレクション</h1>

          <% if @public_collections %>
            <div class="container">
              <div class="row">
                
                <div class="tablecontainer">
                  <table class="table table-striped collections_table">
                    <tr>
                      <th class="col-xs-2 col-md-1"></th>
                      <th class="col-xs-2 col-md-1">名前</th>
                      <th class="col-xs-4 col-md-5">説明</th>
                      <th class="col-xs-2 col-md-1"></th>
                      <th class="col-xs-2 col-md-1"></th>
                    </tr>
                    
                    <% @public_collections.each do |item| %>
                    <tr>
                      <td>
                        <div class="icon">
                          <% if item.image? %>
                            <%= image_tag item.image.thumb.url %>
                          <% else %>
                            <div class="noimage"><span class="glyphicon glyphicon-picture"></span></div>
                        　<% end %>
                      　</div>
                      </td>
                      <td><span><%= link_to item.name, :controller => 'collections', :action => 'info', :id => item.id %> </div></td>
                      <td><span class="textoverflow"><%= item.description %></span></td>
                      <td><span  class="badge"><%= item.points.size %>Points</span></td>
                      <td><span  class="badge"><%= item.followers.size %>Users</span></td>
                    </tr>
                    <% end %>
                  </table>
            
                </div>
              </div>
            </div>
          <% end %>
          
        </div>
        
        <%= render 'layouts/footer' %>
			
			</div><!-- /st-content-inner -->
		</div><!-- /st-content -->
    
	</div><!-- /st-pusher -->

</div><!-- /st-container -->